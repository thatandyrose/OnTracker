.panel.panel-default
  .panel-heading
    %h2.panel-title
      = @ticket.subject
  .panel-body
    .panel
      ticket submitted by <em>#{@ticket.name} (#{@ticket.email})</em> #{time_ago_in_words(@ticket.created_at)} ago
    %blockquote
      %p= @ticket.body
  .panel-footer
    .pull-left
      %span.label.label-default= @ticket.department
      %small reference: #{@ticket.reference}
    .pull-right
      - if current_user && @ticket.is_open?
        = render 'own_button', ticket: @ticket
      - else
        - if @ticket.user
          %strong owner: 
          = @ticket.user.email
    .clearfix